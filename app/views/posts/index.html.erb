<div class="container">
  <div class="page-header">
    <h1>Posts</h1>
    <div class="header-btn"><%= link_to 'New Post', new_post_path, class: "btn btn-dark" %></div>
  </div>

  <p id="notice"><%= notice %></p>

  <div class="row">
    <% @posts.each do |post| %>
    <div class="col-sm-6">
        <h2><%= post.title%></h2> <p><%= post.author.full_name %></p>
        <p><%= post.content %></p>
        <figure><%= image_tag(post.image, width: '200', class: "mx-auto d-block") %></figure>
        <p><%= post.views_count %></p>
        <div class="outer">
          <div class="inner" data-bs-toggle="tooltip" title="Show a post">
            <%= link_to '', post, class: "btn btn-dark fa fa-eye" %>
          </div>
          <div class="inner" data-bs-toggle="tooltip" title="Edit a post">
            <%= link_to '', edit_post_path(post), class: "btn btn-dark fa fa-edit" %>
          </div>
          <div class="inner" data-bs-toggle="tooltip" title="Destroy a post">
            <%= link_to '', post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-dark fa fa-trash" %>
          </div>
        </div>
    </div>
      <% end %>
  </div>









  <table class="table table-light table-bordered table-striped table-hover">
    <thead>
    <tr class="table-dark">
      <th scope="col">Author</th>
      <th scope="col">Title</th>
      <th scope="col">Content</th>
      <th scope="col">Image</th>
      <th scope="col">Views Count</th>
      <th scope="col">Actions</th>
    </tr>
    </thead>

    <tbody>

    </tbody>
  </table>
</div>
